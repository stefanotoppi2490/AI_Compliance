generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum DocumentKind {
  CONTRACT
}

enum DocumentStatus {
  UPLOADED
  AI_READY
  ERROR
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hash
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]
}

model Project {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents     Document[]
  riskAnalyses  RiskAnalysis[]
  scopeChecks   ScopeCheck[]

  @@index([ownerId])
}

model Document {
  id           String         @id @default(cuid())
  projectId    String
  project      Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)

  kind         DocumentKind   @default(CONTRACT)
  status       DocumentStatus @default(UPLOADED)

  originalName String
  mimeType     String
  blobUrl      String

  // opzionale: cache se vuoi ricaricare meno volte su OpenAI
  openaiFileId     String?
  vectorStoreId    String?
  vectorStoreFileId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 1 solo “attivo” per progetto: lo gestisci lato logica (o con isActive)
  isActive   Boolean @default(true)

  riskAnalyses RiskAnalysis[]
  scopeChecks  ScopeCheck[]

  @@index([projectId, isActive])
}

model RiskAnalysis {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  inputMeta Json?     // es: {version: "v1", model:"gpt-5"}
  result    Json      // output JSON dell’AI
  createdAt DateTime  @default(now())

  @@index([projectId, createdAt])
  @@index([documentId])
}

model ScopeCheck {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  request   String
  result    Json
  createdAt DateTime @default(now())

  @@index([projectId, createdAt])
  @@index([documentId])
}